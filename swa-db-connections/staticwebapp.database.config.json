{
  "$schema": "https://github.com/Azure/data-api-builder/releases/latest/download/dab.draft.schema.json",
  "data-source": {
    "database-type": "mssql",
    "options": {
      "set-session-context": false
    },
    "connection-string": "@env('DATABASE_CONNECTION_STRING')"
  },
  "runtime": {
    "rest": {
      "enabled": true,
      "path": "/rest"
    },
    "graphql": {
      "allow-introspection": true,
      "enabled": true,
      "path": "/graphql"
    },
    "host": {
      "mode": "production",
      "cors": {
        "origins": [
          "http://localhost:4280"
        ],
        "allow-credentials": false
      },
      "authentication": {
        "provider": "StaticWebApps"
      }
    }
  },
  "entities": {
    "Language": {
      "source": "dbo.Language",
      "relationships": {
        "language_words": {
          "cardinality": "many",
          "target.entity": "Word",
          "source.fields": [
            "Name"
          ],
          "target.fields": [
            "Language"
          ]
        },
        "language_phrases": {
          "cardinality": "many",
          "target.entity": "Phrase",
          "source.fields": [
            "Name"
          ],
          "target.fields": [
            "Language"
          ]
        }
      },
      "permissions": [
        {
          "actions": [
            "*"
          ],
          "role": "anonymous"
        }
      ]
    },
    "Phrase": {
      "source": "dbo.Phrase",
      "relationships": {
        "phrase_language": {
          "cardinality": "one",
          "target.entity": "Language",
          "source.fields": [
            "Language"
          ],
          "target.fields": [
            "Name"
          ]
        },
        "phrase_tags": {
          "cardinality": "many",
          "target.entity": "Tag",
          "source.fields": [
            "Id"
          ],
          "target.fields": [
            "Name"
          ],
          "linking.object": "dbo.TagPhraseRelation",
          "linking.source.fields": [
            "Phrase"
          ],
          "linking.target.fields": [
            "Tag"
          ]
        },
        "phrase_translations": {
          "cardinality": "many",
          "target.entity": "Phrase",
          "source.fields": [
            "Id"
          ],
          "target.fields": [
            "Id"
          ],
          "linking.object": "dbo.PhraseTranslation",
          "linking.source.fields": [
            "Source"
          ],
          "linking.target.fields": [
            "Target"
          ]
        },
        "phrase_words": {
          "cardinality": "many",
          "target.entity": "Word",
          "source.fields": [
            "Id"
          ],
          "target.fields": [
            "Id"
          ],
          "linking.object": "dbo.PhraseMembership",
          "linking.source.fields": [
            "Phrase"
          ],
          "linking.target.fields": [
            "Word"
          ]
        }
      },
      "permissions": [
        {
          "actions": [
            "*"
          ],
          "role": "anonymous"
        }
      ]
    },
    "PhraseMembership": {
      "source": "dbo.PhraseMembership",
      "permissions": [
        {
          "actions": [
            "*"
          ],
          "role": "anonymous"
        }
      ]
    },
    "PhraseMembershipTranslation": {
      "source": "dbo.PhraseMembershipTranslation",
      "permissions": [
        {
          "actions": [
            "*"
          ],
          "role": "anonymous"
        }
      ]
    },
    "PhraseTranslation": {
      "source": "dbo.PhraseTranslation",
      "permissions": [
        {
          "actions": [
            "*"
          ],
          "role": "anonymous"
        }
      ]
    },
    "Tag": {
      "source": "dbo.Tag",
      "relationships": {
        "tag_phrases": {
          "cardinality": "many",
          "target.entity": "Phrase",
          "source.fields": [
            "Name"
          ],
          "target.fields": [
            "Id"
          ],
          "linking.object": "dbo.TagPhraseRelation",
          "linking.source.fields": [
            "Tag"
          ],
          "linking.target.fields": [
            "Phrase"
          ]
        },
        "tag_words": {
          "cardinality": "many",
          "target.entity": "Word",
          "source.fields": [
            "Name"
          ],
          "target.fields": [
            "Id"
          ],
          "linking.object": "dbo.TagWordRelation",
          "linking.source.fields": [
            "Tag"
          ],
          "linking.target.fields": [
            "Word"
          ]
        }
      },
      "permissions": [
        {
          "actions": [
            "*"
          ],
          "role": "anonymous"
        }
      ]
    },
    "TagWordRelation": {
      "source": "dbo.TagWordRelation",
      "permissions": [
        {
          "actions": [
            "*"
          ],
          "role": "anonymous"
        }
      ]
    },
    "TagPhraseRelation": {
      "source": "dbo.TagPhraseRelation",
      "permissions": [
        {
          "actions": [
            "*"
          ],
          "role": "anonymous"
        }
      ]
    },
    "Word": {
      "source": "dbo.Word",
      "relationships": {
        "word_language": {
          "cardinality": "one",
          "target.entity": "Language",
          "source.fields": [
            "Language"
          ],
          "target.fields": [
            "Name"
          ]
        },
        "word_tags": {
          "cardinality": "many",
          "target.entity": "Tag",
          "source.fields": [
            "Id"
          ],
          "target.fields": [
            "Name"
          ],
          "linking.object": "dbo.TagWordRelation",
          "linking.source.fields": [
            "Word"
          ],
          "linking.target.fields": [
            "Tag"
          ]
        },
        "word_translations": {
          "cardinality": "many",
          "target.entity": "Word",
          "source.fields": [
            "Id"
          ],
          "target.fields": [
            "Id"
          ],
          "linking.object": "dbo.WordTranslation",
          "linking.source.fields": [
            "Source"
          ],
          "linking.target.fields": [
            "Target"
          ]
        },
        "word_phrases": {
          "cardinality": "many",
          "target.entity": "Phrase",
          "source.fields": [
            "Id"
          ],
          "target.fields": [
            "Id"
          ],
          "linking.object": "dbo.PhraseMembership",
          "linking.source.fields": [
            "Word"
          ],
          "linking.target.fields": [
            "Phrase"
          ]
        }
      },
      "permissions": [
        {
          "actions": [
            "*"
          ],
          "role": "anonymous"
        }
      ]
    },
    "WordTranslation": {
      "source": "dbo.WordTranslation",
      "permissions": [
        {
          "actions": [
            "*"
          ],
          "role": "anonymous"
        }
      ]
    },
    "WordTranslationView": {
      "source": "dbo.WordTranslationView",
      "permissions": [
        {
          "actions": [
            "*"
          ],
          "role": "anonymous"
        }
      ]
    }
  }
}